{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "lib": [
      "DOM",
      "ES6",
      "DOM.Iterable",
      "ScriptHost",
      "ESNext"
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": ["./modules/*"],
      "@utils/*": ["./utils/"],
      "@utils": ["./utils/index.js"],
      "@data/*": ["./data/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "scripts",
    "dist"
  ]
}
