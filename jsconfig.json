{
  "compilerOptions": {
    "target": "es2024",
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "ESNext"],
    "paths": {
      "@/*": ["./src/modules/*"],
      "@utils/*": ["./src/utils/"],
      "@utils/shared/*": ["./src/utils/shared/*"],
      "@utils": ["./src/utils/index.js"],
      "@data/*": ["./src/data/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
